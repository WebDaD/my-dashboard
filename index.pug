mixin card(id,title, link, classes)
  .card(id=id class="classes")
    .card-header
      if link !== ''
        a(href=link target="_blank")
          span= title
          |  
          i.fa.fa-external-link
      else
        =title
    .card-body
      if block
        block
      else
        span ?
